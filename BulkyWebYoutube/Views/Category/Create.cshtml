@model Category

<form method="post">
    <div class="border p-4 mt-4">
        
        <div class="row pb-2 text-primary">
            <h2>Create Category</h2>
            <hr/>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="Name" class="pb-2"></label>
            <input asp-for="Name" class="form-control"></input>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="DisplayOrder" class="pb-2"></label>
            <input asp-for="DisplayOrder" class="form-control"></input>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        
        
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control"><i class="bi bi-arrow-left"></i> Back to List</a>
            </div>
            
           
        </div>
    </div>
</form>

@*
    Client side validation
*@
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}